<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Svetkavichko.MainPage"
             BackgroundImageSource="background.png">

    <ScrollView>
        <VerticalStackLayout
            Padding="10, 60, 10, 10"
            Spacing="40">
            
            
            <Label
                Text="Светкавичко"
                Margin="10"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                TextColor="#C7A200"/>

            <Label
                Text="Избери малка задачка"
                Style="{StaticResource SubHeadline}"
                FontFamily="Gridtile"
                TextColor="Black"
                />

            <Button
                x:Name="StartBtn"
                Text="Начало"
                Clicked="OnStartClicked"
                BackgroundColor="#FFD311"
                FontAttributes="Bold"
                WidthRequest="200"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
